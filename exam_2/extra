function formValidation($section, $fieldName)
{
    if (isset($_POST[$section][$fieldName])) {
        switch ($section) {
            case 'firstname':
                if (checkValidation($section, $fieldName)) {
                    return "Please enter a firstname";
                }
                break;

            case 'lastname':
                if (checkValidation($section, $fieldName)) {
                    return "Please enter a lastname";
                }
                break;


            case 'email':
                if (checkValidation($section, $fieldName)) {
                    return "Please enter a email";
                }
                break;


            case 'mobile_number':
                if (checkValidation($section, $fieldName)) {
                    return "Please enter a mobile number";
                }
                break;


            case 'password':
                if (checkValidation($section, $fieldName)) {
                    return "Please enter a password";
                }
                break;


            case 'comfirm_password':
                if (checkValidation($section, $fieldName)) {
                    return "Please enter a comfirm password";
                }
                break;
            case 'information':
                if (checkValidation($section, $fieldName)) {
                    return "Please enter a information";
                }
                break;
        }
    }
}

